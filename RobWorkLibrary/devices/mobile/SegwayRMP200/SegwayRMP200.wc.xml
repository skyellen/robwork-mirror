<MobileDevice name="Segway" basename="base">
 <AxelWidth> 0.54 </AxelWidth>
 <LeftWheel name="left" />
 <RightWheel name="right" />

 <PosLimit refjoint="left" min="-100" max="100" />
 <PosLimit refjoint="right" min="-100" max="100" />
 <VelLimit refjoint="left"  max="100" />
 <VelLimit refjoint="right" max="100" />
 <AccLimit refjoint="left"  max="100" />
 <AccLimit refjoint="right" max="100" />
 
 <Frame name="TopPlate" refframe="base">
 <RPY>0 0 0</RPY><Pos>0 0 0.74</Pos>
 </Frame>
 
 <Joint name="WLeft" refframe="base" type="Revolute">
  <RPY>0.0 0.0 -90.0</RPY><Pos> 0.0 0.27 0.24</Pos>
  <Depend on="left" gain="-5.0" offset="0.0" />
 </Joint>

 <Joint name="WRight" refframe="base" type="Revolute">
  <RPY>0.0 0.0 90.0</RPY><Pos> 0 -0.27 0.24</Pos>
  <Depend on="right" gain="-5.0" offset="0.0" />
 </Joint>   

 <Drawable name="BaseGeo" refframe="base">
    <RPY>0.0 0.0 0.0</RPY><Pos>0.0 0.0 0.0</Pos>
    <Polytope file = "body"/>
 </Drawable>
 
 <Drawable name="WLeftGeo" refframe="WLeft">
    <RPY>0.0 0.0 0.0</RPY><Pos>0.0 0.0 0</Pos>
    <Polytope file = "wheel"/>
 </Drawable>
 
 <Drawable name="WRightGeo" refframe="WRight">
    <RPY>0.0 0.0 0.0</RPY><Pos>0.0 0.0 0</Pos>
    <Polytope file = "wheel"/>
 </Drawable>

 
</MobileDevice>