<TreeDevice name="BarrettHand">
  <Frame name="Base">
    <RPY> 0 0 0 </RPY> <Pos>0 0 0.056</Pos>
  </Frame>
  
  <Joint name="J11" refframe="Base" type="Revolute">
   <RPY> 180 0 0 </RPY><Pos>0 -0.025 0</Pos> </Joint>  
  <Joint name="J12" refframe="J11" type="Revolute" >
   <RPY> 0 0 90 </RPY> <Pos> 0.05 0 0</Pos></Joint>
  <Joint name="J13" refframe="J12" type="Revolute">
   <RPY> 40 0 0 </RPY> <Pos> 0.07 0.003 0</Pos></Joint>
  <Frame name="TCP1" type="EndEffector">
   <RPY> 0 0 -90 </RPY> <Pos>0.05 0 0 </Pos></Frame>

  <Joint name="J21" refframe="Base" type="Revolute">
   <RPY> 180 0 0 </RPY><Pos>0 0.025 0</Pos> 
   <Depend on="J11" gain="-1" offset="0" />
  </Joint>  
  <Joint name="J22" refframe="J21" type="Revolute">
   <RPY> 0 0 90 </RPY> <Pos> 0.05 0 0</Pos></Joint>
  <Joint name="J23" refframe="J22" type="Revolute">
   <RPY> 40 0 0 </RPY> <Pos> 0.07 0.003 0</Pos>
   <Depend on="J22" gain="0.75" offset="0" />
   </Joint>
  <Frame name="TCP2" type="EndEffector">
   <RPY> 0 0 -90 </RPY> <Pos>0.05 0 0 </Pos></Frame>
   
  <Joint name="J32" refframe="Base" type="Revolute">
   <RPY> 0 180 -90 </RPY> <Pos> -0.05 0 0</Pos></Joint>
  <Joint name="J33" refframe="J32" type="Revolute">
   <RPY> 40 0 0 </RPY> <Pos> 0.07 0.003 0</Pos>
   <Depend on="J32" gain="0.75" offset="0" />
   <Depend on="J32" gain="0.75" offset="0" />
   </Joint>
  <Frame name="TCP3" type="EndEffector">
   <RPY> 0 0 -90 </RPY> <Pos>-0.05 0 0 </Pos></Frame>

  <PosLimit refjoint="J11" min="0" max="180" />
  <!--PosLimit refjoint="J12" min="0" max="140" /-->
  <PosLimit refjoint="J21" min="0" max="180" />
  <PosLimit refjoint="J22" min="0" max="140" />
  <PosLimit refjoint="J32" min="0" max="140" />

  <!--PosLimit refjoint="J13" min="0" max="45" />
  <PosLimit refjoint="J23" min="0" max="45" />
  <PosLimit refjoint="J33" min="0" max="45" /-->
  
  <!-- We define all drawables here -->
  <Drawable name="BASE" refframe="Base">
   <RPY> 0 0 0 </RPY> <Pos> 0 0 -0.0755 </Pos>
   <Polytope file="iv/fine/base" /></Drawable>

  <Drawable name="LINK1" refframe="J11">
   <RPY> 0 0 0 </RPY> <Pos> 0 0 -0.020 </Pos>
   <Polytope file="iv/fine/link1" /></Drawable>
  <Drawable name="LINK2" refframe="J12">
   <RPY> 0 0 0 </RPY> <Pos> 0 0 0 </Pos>
   <Polytope file="iv/fine/link2" /></Drawable>
  <Drawable name="LINK3" refframe="J13">
   <RPY> 0 0 0 </RPY> <Pos> 0 0 0 </Pos>
   <Polytope file="iv/fine/link3" /></Drawable>

  <Drawable name="LINK1" refframe="J21">
   <RPY> 0 0 0 </RPY> <Pos> 0 0 -0.020 </Pos>
   <Polytope file="iv/fine/link1" /></Drawable>
  <Drawable name="LINK2" refframe="J22">
   <RPY> 0 0 0 </RPY> <Pos> 0 0 0 </Pos>
   <Polytope file="iv/fine/link2" /></Drawable>
  <Drawable name="LINK3" refframe="J23">
   <RPY> 0 0 0 </RPY> <Pos> 0 0 0 </Pos>
   <Polytope file="iv/fine/link3" /></Drawable>

  <Drawable name="LINK2" refframe="J32">
   <RPY> 0 0 0 </RPY> <Pos> 0 0 0 </Pos>
   <Polytope file="iv/fine/link2" /></Drawable>
