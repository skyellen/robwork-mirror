<TreeDevice name="RoHTool">
 <Frame name="Base" />

 <Joint name="Jaw" type="Prismatic">
  <RPY> 0 0 0 </RPY> <Pos> 0 0 0</Pos>
 </Joint>

 <Frame name="TCP" type="EndEffector">
  <RPY> 0 0 0 </RPY> <Pos> 0 0 0.208</Pos> 
 </Frame>

 <Joint name="LeftFinger" refframe="Base" type="Prismatic">
  <RPY> -90 0 90 </RPY> <Pos> 0 0.01 0.108</Pos> 
  <Depend on="Jaw" gain="-1" offset="0" />
 </Joint>
  
 <Joint name="RightFinger" refframe="Base" type="Prismatic">
  <RPY> -90 0 90 </RPY> <Pos> 0 -0.01 0.108</Pos>
  <Depend on="Jaw" gain="1" offset="0" />
 </Joint>


<!-- Define limits -->
 <PosLimit refjoint="Jaw" min="0" max="0.080" />

<!-- And know we add the geometry -->
 <Drawable name="BaseGeo" refframe="Base">
  <Polytope file="Geometry/robotIA20/tool" /></Drawable>

 <Drawable name="LeftGeo" refframe="LeftFinger">
  <RPY> 0 0 -90 </RPY> <Pos> 0 0 0</Pos>
  <Polytope file="Geometry/robotIA20/jaw" /></Drawable>

 <Drawable name="RightGeo" refframe="RightFinger">
  <RPY> 0 0 -90 </RPY> <Pos> 0 0 0</Pos>
  <Polytope file="Geometry/robotIA20/jaw" /></Drawable>

  <CollisionSetup file="ToolCollisionSetup.xml" />

</TreeDevice>
