
<!-- The common offset for Scene, SceneSimple and SceneSimpleCollision. -->

 <!-- the stand relative to world -->
 <Frame name="Setup" refframe="WORLD">
  <RPY>0 0 0</RPY>
  <Pos>0.0 0.0 0.04</Pos>
 </Frame>
 
 <!-- The bar that the robot is attached to -->
 <Frame name="LWA3Bar" refframe="Setup">
  <RPY>0 0 0</RPY>
  <Pos>0.0 0.0 0.74</Pos>
 </Frame>

 <!-- camera bar and the camera frame -->
 <Frame name="CameraBar" refframe="WORLD">
  <RPY>0 0 0</RPY><Pos>0 0.1 1.79</Pos>
 </Frame>
 
 <Frame name="Camera" refframe="CameraBar">
  <RPY>0 0 20</RPY><Pos>0 0.1 0</Pos>
  <Property name="Camera">50 640 480</Property>
 </Frame>

 <!-- and lastly the sick scanner -->
 <Frame name="SickScanner" refframe="WORLD">
  <RPY>0 0 0</RPY>
  <Pos>0.48 -0.2 0.105</Pos>
 </Frame>

 <Frame name="Table" refframe="WORLD">
  <RPY>0 0 0.0</RPY>
  <Pos>0 0.45 0.025</Pos>
 </Frame>
 
 <!-- the base of the lwa relative to the robot bar on the stand -->
 <Frame name="LWA3Base" refframe="LWA3Bar">
  <RPY>-90 0 0</RPY>
  <Pos>0 0 0.095</Pos>
 </Frame>

 <Frame name="TableRef" refframe="LWA3Base">
  <RPY>90 0 0</RPY><Pos>-0.18 -0.25 0.005</Pos>
 </Frame>
 