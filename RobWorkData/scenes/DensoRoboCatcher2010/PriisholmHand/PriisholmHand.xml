<TreeDevice name="PrissHolmHand">

 <Define id="finger">

  <Joint name="Joint1" type="Revolute">
   <RPY> 0 0 -90 </RPY> <Pos> -0.0448 0 0.0562</Pos></Joint>
  <Joint name="Joint2" type="Revolute">
   <RPY> 120 0 0 </RPY> <Pos> -0.0159 -0.0367 0.0</Pos></Joint>
<!-- 0.0275 0.02 0 -->
  <Frame name="TCP" type="EndEffector">
   <RPY> -30 90 0 </RPY> <Pos> 0.0275 0.02 0</Pos></Frame>

  <!-- Define limits -->

  
  <PosLimit refjoint="Joint1" min="-0.5" max="50" />
  <PosLimit refjoint="Joint2" min="-0.5" max="50" />
  <VelLimit refjoint="Joint1" max="100" />
  <VelLimit refjoint="Joint2" max="100" />
  <AccLimit refjoint="Joint1" max="1000" />
  <AccLimit refjoint="Joint2" max="1000" />

  <!-- And geometry -->
  <Drawable name="Joint2Geo" refframe="Joint1">
   <RPY> 180 0 -90 </RPY> <Pos> 0.0453 0.0562 -0.0023</Pos>
   <Polytope file="Geometry/SimplePrissGribehaand_Finger_base.obj" />
  </Drawable>
<!-- -0.038105 -0.0417 0 -->

  <Drawable name="Joint3Geo" refframe="Joint2">
   <RPY> 0 0 -90 </RPY> <Pos> -0.06117 -0.09289 -0.0023</Pos>
   <Polytope file="Geometry/SimplePrissGribehaand_Finger_Tip.obj" />
  </Drawable>
<!-- 0.06117 -0.09289 0.0025 -->
    
 </Define>

 <Frame name="Base">
  <RPY> 0 0 0 </RPY> <Pos>0 0 0.098</Pos>
 </Frame>
 <Frame name="TCP">
  <RPY> 0 0 0 </RPY> <Pos>0 0 0.08</Pos>
 </Frame>
 
 <Frame name="f1" refframe="Base" ></Frame>
 <Frame name="F1Base">
  <RPY> 180 0 0 </RPY> <Pos>0.0 0.0 0.0</Pos></Frame>
 <SerialChain name="f1">
  <Use id="finger" />
 </SerialChain>

 <Frame name="f2" refframe="Base" ></Frame>
 <Frame name="F2Base">
  <RPY> 0 0 0 </RPY> <Pos>0.0 -0.025 0.0</Pos></Frame>
 <SerialChain name="f2">
  <Use id="finger" />
 </SerialChain>

 <Frame name="f3" refframe="Base" ></Frame>
 <Frame name="F3Base">
  <RPY> 0 0 0 </RPY> <Pos>0.0 0.025 0.0</Pos></Frame>
 <SerialChain name="f3">
  <Use id="finger" />
 </SerialChain>


<!-- 0.038105 0 0.0417 --> 
 
 <!-- And know we add the geometry -->
 <Drawable name="BaseGeo" refframe="Base">
  <Polytope file="Geometry/PrissGribehaand_Base.obj" />
 </Drawable>

 
</TreeDevice>
