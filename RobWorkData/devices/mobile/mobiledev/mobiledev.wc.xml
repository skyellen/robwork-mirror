<MobileDevice name="testdev" basename="base">
 <AxelWidth> 2.0 </AxelWidth>
 <LeftWheel name="left" />
 <RightWheel name="right" />

 <PosLimit refjoint="left" min="-100" max="100" />
 <PosLimit refjoint="right" min="-100" max="100" />
 <VelLimit refjoint="left"  max="100" />
 <VelLimit refjoint="right" max="100" />
 <AccLimit refjoint="left"  max="100" />
 <AccLimit refjoint="right" max="100" />
 
 <Joint name="WLeftFront" refframe="base" type="Revolute">
  <RPY>0.0 0.0 -90.0</RPY><Pos> 0.5 0.5 0</Pos>
  <Depend on="left" gain="5.0" offset="0.0" />
 </Joint>

 <Joint name="WRightFront" refframe="base" type="Revolute">
  <RPY>0.0 0.0 90.0</RPY><Pos> 0.5 -0.5 0</Pos>
  <Depend on="right" gain="5.0" offset="0.0" />
 </Joint>   

 <Joint name="WLeftBack" refframe="base" type="Revolute">
  <RPY>0.0 0.0 -90.0</RPY><Pos> -0.5 0.5 0</Pos>
  <Depend on="left" gain="5.0" offset="0.0" />
 </Joint>

 <Joint name="WRightBack" refframe="base" type="Revolute">
  <RPY>0.0 0.0 90.0</RPY><Pos> -0.5 -0.5 0</Pos>
  <Depend on="right" gain="5.0" offset="0.0" />
 </Joint>   

 <Drawable name="BaseGeo" refframe="base">
    <RPY>0.0 0.0 0.0</RPY><Pos>0.0 0.0 0.0</Pos>
    <Polytope file = "geometry/body1"/>
 </Drawable>
 
 <Drawable name="WLeftFrontGeo" refframe="WLeftFront">
    <RPY>0.0 0.0 0.0</RPY><Pos>0.0 0.0 0.0</Pos>
    <Polytope file = "geometry/wheel"/>
 </Drawable>
 
 <Drawable name="WRightFrontGeo" refframe="WRightFront">
    <RPY>0.0 0.0 0.0</RPY><Pos>0.0 0.0 0.0</Pos>
    <Polytope file = "geometry/wheel"/>
 </Drawable>

 <Drawable name="WLeftBackGeo" refframe="WLeftBack">
    <RPY>0.0 0.0 0.0</RPY><Pos>0.0 0.0 0.0</Pos>
    <Polytope file = "geometry/wheel"/>
 </Drawable>

 <Drawable name="WRightBackGeo" refframe="WRightBack">
    <RPY>0.0 0.0 0.0</RPY><Pos>0.0 0.0 0.0</Pos>
    <Polytope file = "geometry/wheel"/>
 </Drawable>
 
</MobileDevice>