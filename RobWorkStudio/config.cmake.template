# -*- cmake -*-
#
# ROBWORKSTUDIO SPECIFIC
#


# We need the location of RobWork
SET(RW_ROOT ${ROOT}/../RobWork/)

# Enable RWS sandbox
SET(RWS_BUILD_SANDBOX ON)

# Enable static linkage of built-in RWS plugins
# NOTE: Setting this to OFF on 64 bit Linux will cause linker errors unless you 
# have compiled Boost yourself with the -fPIC compiler flag enabled
SET(RWS_USE_STATIC_LINK_PLUGINS ON)

# Enable Lua
SET(RWS_USE_LUA ON)

# Enable tests
SET(RWS_BUILD_TESTS ON)
